            <form method="post" class="container pt-2 mt-2" action="dburunekle" >
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Urun Adi</span>
                    </div>
                    <input type="text" name="urunAdi" class="form-control" placeholder="Urun Adi" />
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Urun Açıklama</span>
                    </div>
                    <input type="text" name="urunAciklama" class="form-control" placeholder="Urun Açıklama" />
                </div>
                <div class="input-group mb-3 w-25">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Urun Kategori</span>
                        <select name="urunKategori" class="btn bg-light">
                            <option value="1">Elektronik</option>
                            <option value="2">Moda</option>
                            <option value="3">Kırtasiye</option>
                            <option value="4">Otomobil Aksesuar</option>
                        </select>
                    </div>
                </div>
                <div class="input-group mb-3 w-25">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Urun Durum</span>
                        <select name="urunDurum" class="btn bg-light">
                            <option value="Yeni">Yeni</option>
                            <option value="Kullanilmis">Kullanılmış</option>
                            <option value="Arizali">Arızalı</option>
                            <option value="Yeni Gibi">Yeni Gibi</option>
                        </select>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <p class="bg-light btn">Resim ekleyiniz:</p>
                        <input type="file" name="dosya" class="btn"/>
                    </div>
                </div>
                <button type="submit"  class="btn btn-outline-danger font-weight-bold " id="Send">Yeni Ürün Ekle</button>
            </form>
